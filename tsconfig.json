{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "src/app/dashboard/template-demo-string/all/api/v1/ai-text.ai.mc",
        ".idea/ai-prompt/redux/rtk-Api-in.ts",
        ".idea/ai-prompt/redux/rtk-Api-out.ts",
        ".idea/ai-prompt/store/store/Store-in.ts",
        ".idea/ai-prompt/store/store/Store-out.ts",
        ".idea/ai-prompt/store/store-type/StoreTypes-in.ts",
        ".idea/ai-prompt/store/store-type/StoreTypes-out.ts"
    ],
    "exclude": ["node_modules"]
}
